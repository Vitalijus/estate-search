<div class="info">
  <% if @error.present? %>
    <div class="error_message">
      <%= @error %>
    </div>
  <% else %>
    <div class="breed_images">
      <% @result.each_with_index do |image, index| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag(image, width: 300, class: "card-img-top", alt: "...") %>
          <div class="card-body">
            <h5 class="card-title"><%= @breed %> number: <%= index + 1 %></h5>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
