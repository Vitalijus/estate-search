<div class="info">
  <% if @error.present? %>
    <div class="error_message">
      <%= @error %>
    </div>
  <% else %>
    <div class="breed_images">
      <div class="breed_name">
        <h3> Breed name: <%= @breed %> </h3>
      </div>

      <% @result.each do |image| %>
        <div class="breed_image">
          <%= image_tag(image, width: 300) %><br>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
